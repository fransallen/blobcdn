{
  "name": "blobcdn",
  "description": "The CDN for beautiful SVG shapes.",
  "private": true,
  "dependencies": {
    "blobs": "^2.2.1-beta.1",
    "etag": "^1.8.1",
    "express": "^4.21.1",
    "randomcolor": "^0.6.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.11",
    "@types/etag": "^1.8.0",
    "@types/express": "^4.17.14",
    "@types/node": "^22.7.5",
    "@types/randomcolor": "^0.5.7",
    "nodemon": "^2.0.12"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --compile --minify --sourcemap --outfile blobcdn",
    "build:docker": "docker build -t ghcr.io/fransallen/blobcdn .",
    "start": "./blobcdn",
    "start:docker": "docker rm -f blobcdn && docker run -e HOSTNAME=localhost -p 3000:3000 --name blobcdn ghcr.io/fransallen/blobcdn"
  }
}
